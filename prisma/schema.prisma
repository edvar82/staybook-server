generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id        String      @id @default(uuid())
  nome      String
  email     String      @unique
  senha     String
  cpf       String      @unique
  telefone  String
  endereco  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Cartoes   Cartao[]
  Favoritos Favoritos[]
  Reserva   Reserva[]
}

model Hotel {
  id        String      @id @default(uuid())
  nome      String
  endereco  String
  telefone  String
  site      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Reserva {
  id         String      @id @default(uuid())
  checkIn    String
  checkOut   String
  numQuartos Int
  valor      Float
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  clienteId  String
  hotelId    String
  Avaliacao  Avaliacao[]
  cliente    Cliente     @relation(fields: [clienteId], references: [id])
  Transacao  Transacao[]
}

model Favoritos {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clienteId String
  hotelId   String
  cliente   Cliente  @relation(fields: [clienteId], references: [id])
}

model Avaliacao {
  id         String   @id @default(uuid())
  nota       Int
  comentario String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  reservaId  String
  reserva    Reserva  @relation(fields: [reservaId], references: [id])
}

model Transacao {
  id              String   @id @default(uuid())
  valor           Float
  data            String
  metodoPagamento String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  reservaId       String
  reserva         Reserva  @relation(fields: [reservaId], references: [id])
}

model Cartao {
  id           String   @id @default(uuid())
  numero       String
  nomeTitular  String
  dataValidade String
  cvv          String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  clienteId    String
  cliente      Cliente  @relation(fields: [clienteId], references: [id])
}
