generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id        String   @id @default(uuid())
  nome      String
  email     String   @unique
  senha     String
  cpf       String   @unique
  telefone  String
  endereco  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Reserva   Reserva[]
  Favoritos Favoritos[]
  Cartoes   Cartoes[]
}

model Hotel {
  id        String   @id @default(uuid())
  nome      String
  endereco  String
  telefone  String
  site      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Reserva   Reserva[]
  Favoritos Favoritos[]
}

model Reserva {
  id        String   @id @default(uuid())
  checkIn DateTime
  checkOut    DateTime
  numQuartos  Int
  valor      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cliente   Cliente  @relation(fields: [clienteId], references: [id])
  clienteId String   
  hotel     Hotel    @relation(fields: [hotelId], references: [id])
  hotelId   String
  Avaliacao Avaliacao[]
  Transacao Transacao[]
}

model Favoritos {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cliente   Cliente  @relation(fields: [clienteId], references: [id])
  clienteId String
  hotel     Hotel    @relation(fields: [hotelId], references: [id])
  hotelId   String
}

model Avaliacao {
  id        String   @id @default(uuid())
  nota      Int
  comentario String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  reserva  Reserva  @relation(fields: [reservaId], references: [id])
  reservaId String
}

model Transacao{
  id        String   @id @default(uuid())
  valor     Float
  data      DateTime
  metodoPagamento String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  reserva   Reserva  @relation(fields: [reservaId], references: [id])
  reservaId String
}

model Cartoes {
  id        String   @id @default(uuid())
  numero    String
  nomeTitular      String
  dataValidade  String
  cvv       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cliente   Cliente  @relation(fields: [clienteId], references: [id])
  clienteId String
}
